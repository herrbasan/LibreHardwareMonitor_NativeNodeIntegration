{
  "name": "librehardwaremonitor-native",
  "version": "0.1.0",
  "description": "Native Node.js addon providing direct access to LibreHardwareMonitor sensor data",
  "main": "lib/index.js",
  "scripts": {
    "install": "npm run build:lhm && npm run build:native",
    "build": "npm run build:lhm && npm run build:native",
    "build:lhm": "node scripts/build-lhm.js",
    "build:native": "node-gyp rebuild",
    "clean": "node-gyp clean && rimraf deps/LibreHardwareMonitor",
    "rebuild": "npm run clean && npm run build",
    "test": "node test/compatibility.js"
  },
  "keywords": [
    "hardware",
    "monitoring",
    "sensors",
    "cpu",
    "gpu",
    "temperature",
    "LibreHardwareMonitor",
    "native",
    "addon",
    "node-api"
  ],
  "author": "herrbasan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/herrbasan/LibreHardwareMonitor_NativeNodeIntegration.git"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "os": [
    "win32"
  ],
  "dependencies": {
    "node-addon-api": "^8.0.0"
  },
  "devDependencies": {
    "node-gyp": "^10.0.0",
    "rimraf": "^5.0.0"
  },
  "gypfile": true
}
